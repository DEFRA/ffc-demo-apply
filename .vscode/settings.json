{
  "files.associations": {
    "azure-pipelines.yml": "azure-pipelines",
    "**/helm/**/*.yaml": "helm",
    "**/helm/**/templates/*.yaml": "helm",
  },
  "[azure-pipelines]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
    "editor.quickSuggestions": {
      "other": true,
      "comments": false,
      "strings": true
    },
    "editor.autoIndent": "full"
  }
}
